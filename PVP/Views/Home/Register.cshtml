@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model PVP.ViewModels.RegisterDTO
@{
    ViewData["Title"] = "Registracija";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="/css/util.css">
</head>
<body>


    @*<div class="container-login100" >*@
    <div class="wrap-login100 p-l-55 p-r-55 p-t-50 p-b-30">
        <form form asp-action="Register" class="login100-form validate-form" id="fform">
            <span class="login100-form-title p-b-40">
                Registracija
            </span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="wrap-input100 m-b-15">
                <input asp-for="Mail" class="input100" type="text" name="Mail" placeholder="El. pašto adresas">
                <span class="focus-input100"></span>
            </div>
            <div><span asp-validation-for="Mail" class="text-danger"></span></div>
            <div class="wrap-input100 m-b-15">
                <input asp-for="Password" class="input100" type="password" name="Password" placeholder="Slaptažodis">
                <span class="focus-input100"></span>
            </div>
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
            <div class="wrap-input100 m-b-15">
                <input asp-for="ConfirmPassword" class="input100" type="password" name="ConfirmPassword" placeholder="Pakartokite slaptažodį">
                <span class="focus-input100"></span>
            </div>
            <div><span asp-validation-for="ConfirmPassword" class="text-danger"></span></div>
            <div class="container-login100-form-btn" type="submit">
                <button class="login100-form-btn">
                    Užsiregistruoti
                </button>
            </div>
            <div class="text-center-small m-t-40">
                <p>Jau turite paskyrą?</p>
            </div>
            <div class="container-login100-form-btn">
                <a class="login100-form-btn" href="@Url.Action("Login", "Home")">
                    Prisijungti
                </a>
            </div>
        </form>
    </div>
    <script>
        window.onload = function () {
        if ('@TempData["RegisterSuccessMessage"]' == 'RegisterSuccess') {
            Swal.fire({
                icon: 'success',
                title: 'Sėkmingai užsiregistravote!\n\nDabar galite prisijungti.',
                buttonsStyling: false,
                showConfirmButton: false,
                confirmButtonColor: '#bd59d4',
                html: '<br><div class=\"container-login100-form-btn\"><button class= \"login100-form-btn\" id=\"swal-custom-button\">Gerai</button></div><br><br><br>'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "@Url.Action("Login", "Home")";//"/login";
                }
            })
        }
        $(document).on('click', '#swal-custom-button', function () {
            swal.clickConfirm();
        });
    };
    </script>

</body>
</html>